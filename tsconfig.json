{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@/*": ["src/*"],
      "@minterm/types": ["./src/renderer/types/index.ts"],
      "@minterm/services": ["./src/renderer/services/index.ts"],
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
